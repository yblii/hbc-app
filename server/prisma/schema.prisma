generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
    MEMBER
    OFFICER
}

model User {
    id       Int     @id @default(autoincrement())
    name     String
    email    String  @unique
    password String
    role     Role    @default(MEMBER)

    isPaid   Boolean @default(false)

    // many-to-one with group
    groupId   Int?
    group     Group?   @relation(fields: [groupId], references: [id])
}

model Group {
    id       Int    @id @default(autoincrement())
    players  User[] // back reference - not an actual column in db, precomputed join by prisma

    courtId  Int?   @unique
    court    Court? @relation(fields: [courtId], references: [id])
}

model Court {
    id             Int       @id @default(autoincrement())
    activeGroup     Group?
    timerStartedAt DateTime?
    timerEndsAt    DateTime?   
}